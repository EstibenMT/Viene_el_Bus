<%= render "shared/map" %>

<div id = 'list-routes'>
  <p class= "h3">
    <% if params[:query].blank? %>
      <%= pluralize @routes.count, "route" %> available
    <% else %>
      <%= pluralize @routes.count, "result" %> for <code><%= params[:query] %></code>
    <% end %>
  </p>

  <div class="mt-4">
    <div class="row gy-3">
      <% @routes.each do |route| %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <%= link_to route_path(route), class: "car-link" do%>
            <%= render "shared/cards_route", route: route  %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
