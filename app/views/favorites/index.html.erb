<div class="container m-4 p-3">
  <%= link_to "🚌 volver al inicio", root_path, class: "btn btn-dark shadow-sm rounded" %>
  <div class="row p-2 mx-auto">

    <% @favorites.each do |favorite| %>

      <div class="col-6 m-1 mx-auto">

        <div class="card rounded">

          <div class="card-body">

            <p> <%= favorite.route.name %> </p>
            <p> <%= favorite.route.price %> </p>
            <p> <%= favorite.route.code %> </p>
            <div class="d-flex justify-content-between">
              <a href=" <% link_to "/routes/#{favorite.route_id}" %> " class="btn btn-dark"> 📍 Ir a esta Ruta</a>
              <%= link_to "🗑 Borrar", favorites_path(favorite), method: :delete, data: { confirm: 'Esta seguro?' } %>
            </div>
          </div>

        </div>

      </div>

    <% end %>

  </div>
</div>
